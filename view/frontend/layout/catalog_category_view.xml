<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="category.product.addto">
            <block class="Magento\Catalog\Block\Product\ProductList\Item\Block"
                   name="super_marketing_plp_banner"
                   template="Superpayments_SuperPayment::marketing/super-product-callout-plp.phtml"
                   after="-"
                   ifconfig="payment/super_payment_gateway/active">
                <arguments>
                    <argument name="view_model" xsi:type="object">Superpayments\SuperPayment\ViewModel\MarketingBanner
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
