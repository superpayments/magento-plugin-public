            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <config_path>payment/super_payment_gateway/cart_banner</config_path>
        </field>
        <field id="confirmation_page_banner" translate="label" type="select" sortOrder="160" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
