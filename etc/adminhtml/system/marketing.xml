            <source_model>Superpayments\SuperPayment\Model\Config\Source\BannerMode</source_model>
            <config_path>payment/super_payment_gateway/banner_mode</config_path>
        </field>
        <field id="plp_banner" translate="label" type="select" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="0" canRestore="1">
